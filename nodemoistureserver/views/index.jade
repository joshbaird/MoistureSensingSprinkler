extends layout

block content
  h1= title
  p Welcome to Need based sprinkler system.

  #wrapper
    #sensorInfo
        h2 Sensor Info
        p
            strong ID:
            |  <span id='sensorInfoId'></span>
            br
            strong Type:
            |  <span id='sensorInfoType'></span>
            br
            strong PinID:
            |  <span id='sensorInfoPinId'></span>
            br
            strong TurnOnTime:
            |  <span id='sensorInfoTurnOnTime'></span>
            br
            strong TurnOffTime:
            |  <span id='sensorInfoTurnOffTime'></span>
            br
            strong TurnOnMoisture:
            |  <span id='sensorInfoTurnOnMoisture'></span>
            br
            strong TurnOffMoisture:
            |  <span id='sensorInfoTurnOffMoisture'></span>
            br
            strong MoistureHistory:
            |  <span id='sensorInfoMoistureHistory'></span>
            br
            strong TurnOnLight:
            |  <span id='sensorInfoTurnOnLight'></span>
            br
            strong TurnOffLight:
            |  <span id='sensorInfoTurnOffLight'></span>
            br
            strong LightHistory:
            |  <span id='sensorInfoLightHistory'></span>
            br
            strong TurnOnTemp:
            |  <span id='sensorInfoTurnOnTemp'></span>
            br
            strong TurnOffTemp:
            |  <span id='sensorInfoTurnOffTemp'></span>
            br
            strong TempHistory:
            |  <span id='sensorInfoTempHistory'></span>
    // /Sensor Info

    h2 Sensor List
    #sensorList
      table
        thead
          th ID
          th Type
          th PinID
          th Delete?
        tbody
      // /Sensor List

    h2 Add Sensor
    #addSensor
        input#inputSensorId(type='text', placeholder='SensorID')
        input#inputSensorType(type='text', placeholder='SensorType')
        input#inputPinId(type='text', placeholder='PinId')
        br
        input#inputTurnOnMoisture(type='text', placeholder='TurnOnMoisture')
        input#inputTurnOffMoisture(type='text', placeholder='TurnOffMoisture')
        br
        input#inputTurnOnLight(type='text', placeholder='TurnOnLight')
        input#inputTurnOffLight(type='text', placeholder='TurnOffLight')
        br
        input#inputTurnOnTemp(type='text', placeholder='TurnOnTemp')
        input#inputTurnOffTemp(type='text', placeholder='TurnOffTemp')
        br
        a(id="inputTempKnobsClick", href='#', style='width: 100%;') Do the awesome
        div#inputTempKnobs(style="width: 100%; display: none;")
            div(class='demo' style='font-size: 35px;')
              pre
              input(id='knobTurnOnTemp' class='knob' data-angleOffset='-125' data-angleArc='250' data-fgColor='#66EE66' data-rotation='clockwise' value='35' style='font-size: 35px;')
            div(class='demo' style='font-size: 35px')
              pre
              input(id='knobTurnOffTemp' class='knob' data-angleOffset='-125' data-angleArc='250' data-fgColor='#66EE66' data-rotation='clockwise' value='35')
        div(style="width: 100%; display: inline-block;")
            input(id='inputDateStart', type='text', class='date start', placeholder='Start Date', style='float: left')
            div(class='input-group clockpicker', data-placement='right', data-align='top', data-autoclose='true', style='float: left')
              input(id='inputTimeStart', type='text', class='clockPickerInput form-control', placeholder='Start Time')
              span(class='input-group-addon')
                span(class="glyphicon glyphicon-time")
            input(id='inputDateEnd', type='text', class='date start', placeholder='End Date', style='float: left')
            div(class='input-group clockpicker', data-placement='right', data-align='top', data-autoclose='true', style='float: left')
              input(id='inputTimeEnd', type='text', class='clockPickerInput form-control', placeholder='End Time')
              span(class='input-group-addon')
                span(class="glyphicon glyphicon-time")
            
          
        

        button#btnAddSensor Add Sensor

